<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_hoadon_1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp">
            <TextView
                android:id="@+id/tv_MaHoaDon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã đơn: 1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/img_Lich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar_today"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_NgayHoaDon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-9-2023"
                android:textSize="20dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_hoadon">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_HoaDon_TenNV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhân viên: Nguyễn Văn A"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_HoaDon_Ban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bàn: 1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_HoaDon_TongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: 15.000VNĐ"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="15dp">
            <TextView
                android:id="@+id/tv_HoaDon_TinhTrang"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="Chưa thanh toán"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="18sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>